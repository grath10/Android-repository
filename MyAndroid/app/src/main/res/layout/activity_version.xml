<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.app.VersionActivity">
    <include layout="@layout/title"
        tools:layout_editor_absoluteY="-2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
    <Button
        android:id="@+id/get_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_query_version"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="71dp" />
    <TextView
        android:id="@+id/version_tip"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="@string/app_version"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/get_version"
        android:layout_marginLeft="16dp" />
    <TextView
        android:id="@+id/version_detail"
        android:layout_width="270dp"
        android:layout_height="23dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="344dp"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/version_tip"
        app:layout_constraintHorizontal_bias="0.695" />

</android.support.constraint.ConstraintLayout>
